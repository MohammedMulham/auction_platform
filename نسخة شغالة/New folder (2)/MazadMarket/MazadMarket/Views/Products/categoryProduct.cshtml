 @model IEnumerable<MazadMarket.Models.Products>
@using MazadMarket.Resourses
@{
    ViewBag.Title = "categoryProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}





<section id="secondary-banner" class="dynamic-image-13">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-8 col-sm-6 col-xs-12">
                <h2>@Html.Raw(layout.products)</h2>
                <h4>@Html.Raw(layout.productDescription)</h4>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-6 ">
                <ul class="breadcrumb">
                    <li><a href="#">Home</a></li>
                    <li>Contact</li>
                </ul>
            </div>
        </div>
    </div>
</section>
<br /><br />
<section>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <form asp-controller="Product" asp-action="categoryProducts" method="GET">

                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <h4>@Html.Raw(layout.productAuction)</h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                        <div class="form-group">
                            <div class="col-md-2"> search</div>
                            <div class="col-md-4">
                                <input type="text" name="search" />
                            </div>
                        </div>
                     



                    


                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">

                                <input type="submit" name="sold" value="search" class="btn btn-success" style="margin-bottom : 5px" />
                            </div>
                        </div>
                    </div>



                </form>

            </div>

        </div>
    </div>
</section>




